}

fun buildString(f:()->string, g:(string)->string):string{
   return g(f());
}


fun closure():()->int {
  var a = 0;
  return anon():int {
    return a = a + 1;
  };
}

fun metaClosure():()->int {
  var b = 1;
  var clos = closure();
  return anon(): int {
    return b = b + clos();
  };
} 

fun factorial(n:int):int{
  if n == 0 then {
    return 1;
  }
  return n * factorial(n-1);
}


